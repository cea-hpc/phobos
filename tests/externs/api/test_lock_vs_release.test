#
# Context initializer for lock vs release test
#

test_bin_dir=$PWD
test_bin="$test_bin_dir/test_lock_vs_release"
test_dir=$(dirname $(readlink -e $0))
. $test_dir/test_env.sh
. $test_dir/setup_db.sh
. $test_dir/test_launch_daemon.sh
. $test_dir/utils_generation.sh

function setup
{
    setup_tables
    setup_test_dirs
    invoke_lrs
}

function cleanup
{
    waive_lrs
    cleanup_test_dirs
    drop_tables
}

function test_lock_vs_release
{
    $LOG_COMPILER $test_bin $DIR_TEST_IN
}

TEST_SETUP=setup
TESTS=(test_lock_vs_release)
TEST_CLEANUP=cleanup
