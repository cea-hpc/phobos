#
# Integration test for extent list commands
#

test_dir=$(dirname $(readlink -e $0))
. $test_dir/test_env.sh
. $test_dir/setup_db.sh
. $test_dir/test_launch_daemon.sh
. $test_dir/utils_generation.sh
. $test_dir/tape_drive.sh

################################################################################
#                                    SETUP                                     #
################################################################################

function dir_setup
{
    setup_test_dirs
    dir1="${DIR_TEST_IN}/dir1"
    dir2="${DIR_TEST_IN}/dir2"
    mkdir ${dir1}
    mkdir ${dir2}
    $phobos dir add -T first_dir $dir1
    $phobos dir format --fs posix --unlock $dir1
    $phobos dir add -T second_dir $dir2
    $phobos dir format --fs posix --unlock $dir2
}

function setup
{
    setup_tables
    if [[ -w /dev/changer ]]; then
        drain_all_drives
        invoke_tlc_bis
        invoke_daemons
    else
        invoke_lrs
    fi

    dir_setup
    setup_dummy_files 3 1k 1
}

function cleanup
{
    if [[ -w /dev/changer ]]; then
        waive_daemons
        waive_tlc_bis
        drain_all_drives
    else
        waive_lrs
    fi

    cleanup_dummy_files
    cleanup_test_dirs
    drop_tables
}

function list_error
{
    echo "An error occured while listing objects: "
    echo "Matching: $1"
    echo "Returned: $2"
    echo "Expected: $3"
}

################################################################################
#                                    TESTS                                     #
################################################################################

function test_extent_list_degroup
{
    $phobos put --family dir --lyt-params repl_count=2 ${FILES[0]} degroup-oid ||
        error "Object should be put"

    cmd_list="$valg_phobos extent list --degroup -o address,media_name"

    # First check when specifying the medium name
    res1=$($cmd_list --name $dir1 degroup-oid | grep $dir1)
    res2=$($cmd_list --name $dir2 degroup-oid | grep $dir2)

    if [ "$res1" == "$res2" ]; then
        error "Outputs should be different"
    fi

    # Then check without specifying the medium name
    if [ "$res1" != "$($cmd_list degroup-oid | grep $dir1)" ]; then
        error "Outputs should be identical"
    fi

    if [ "$res2" != "$($cmd_list degroup-oid | grep $dir2)" ]; then
        error "Outputs should be identical"
    fi
}

function test_extent_list_pattern
{
    $phobos put --family dir -T first_dir ${FILES[0]} oid1 ||
        error "Object should be put"
    $phobos put --family dir -T second_dir ${FILES[0]} oid2 ||
        error "Object should be put"
    $phobos put --family dir -T first_dir ${FILES[0]} blob ||
        error "Object should be put"
    $phobos put --family dir -T second_dir ${FILES[0]} lorem ||
        error "Object should be put"

    contents=("oid1;oid1"
              "--pattern oid;oid1\noid2"
              "--pattern 2 blob;oid2\nblob"
              "--pattern --name $dir2 oid;oid2"
              "--name $dir1 blob;blob"
              ";oid1\noid2\nblob\nlorem"
              "--pattern OID1;"
              "--pattern --name $dir1 o;oid1\nblob"
              "--pattern --name $dir2 b m;lorem"
              "oid1 oid2;oid1\noid2"
              "--name $dir1 lorem;")

    for id in "${contents[@]}"
    do
        match=$(echo "$id" | cut -d';' -f1)
        exp=$(echo -e $(echo "$id" | cut -d';' -f2))

        res=$($valg_phobos extent list $match)

        if [ "$res" != "$exp" ]; then
           list_error "$match" "$res" "$exp"
        fi
    done

    export PHOBOS_LRS_server_socket="regular_file"
    touch $PHOBOS_LRS_server_socket
    $valg_phobos extent list ||
        error "Extent list should have succeeded"
    unset PHOBOS_LRS_server_socket

    return 0
}

function test_extent_list_tapes_lib() {
    touch /tmp/extent3
    touch /tmp/extent4

    local tape=$(get_tapes L6 1)
    local drive="$(get_lto_drives 6 1)"
    local tape_bis=$(get_tapes_bis L6 1)
    local drive_bis="$(get_lto_drives_bis 6 1)"

    $phobos drive add --unlock ${drive} --library legacy
    $phobos drive add --unlock ${drive_bis} --library library_bis

    $phobos tape add --type lto6 ${tape} --library legacy
    $phobos tape add --type lto6 ${tape_bis} --library library_bis

    $phobos tape format --unlock ${tape} --library legacy
    $phobos tape format --unlock ${tape_bis} --library library_bis

    $phobos put -l raid1 --lyt-params repl_count=2 /tmp/extent3 extent3
    $phobos put -l raid1 --lyt-params repl_count=1 /tmp/extent4 extent4 \
        --library library_bis

    output=$($phobos extent list --library legacy)
    echo "$output" | grep "extent3" && ! echo "$output" | grep "extent4"

    output=$($phobos extent list --library library_bis)
    echo "$output" | grep -E "extent3|extent4" | wc -l | grep -q "^2$" \
        && ! echo "$output" | grep -vE "extent3|extent4"


    cleanup_test_dirs
    rm /tmp/extent3 /tmp/extent4
}

function test_extent_list_dirs_lib() {
    mkdir $DIR_TEST_IN/lib1
    mkdir $DIR_TEST_IN/lib2
    $phobos dir add --unlock $DIR_TEST_IN/lib1 --library lib1
    $phobos dir add --unlock $DIR_TEST_IN/lib2 --library lib2
    $phobos dir format $DIR_TEST_IN/lib1 --library lib1
    $phobos dir format $DIR_TEST_IN/lib2 --library lib2

    $phobos put -f dir --library lib1 ${FILES[0]} extent1
    $phobos put -f dir --library lib2 ${FILES[0]} extent2

    output=$($phobos extent list --library lib1)
    echo "$output" | grep "extent1" && ! echo "$output" | grep "extent2"

    output=$($phobos extent list --library lib2)
    echo "$output" | grep "extent2" && ! echo "$output" | grep "extent1"

    output=$($phobos extent list --library lib1 -n $DIR_TEST_IN/lib1)
    echo "$output" | grep "extent1" && ! echo "$output" | grep "extent2"
}

function test_extent_list_copy_name() {
    $phobos put -f dir -c source ${FILES[0]} bob
    $phobos put -f dir -c cache-copy ${FILES[0]} alice

    local output=$($valg_phobos extent list --copy-name cache-copy)
    local count=$(echo "$output" | wc -l)
    if [[ $count -ne 1 ]]; then
        error "There should be only one extent, got $count"
    fi

    echo "$output" | grep "alice"

    output=$($valg_phobos extent list --copy-name source bob alice)
    count=$(echo "$output" | wc -l)
    if [[ $count -ne 1 ]]; then
        error "There should be only one extent, got $count"
    fi

    echo "$output" | grep "bob"
}

function test_extent_list_orphan() {
    $phobos put -f dir ${FILES[0]} oid1-orphan
    $phobos put -f dir ${FILES[0]} oid2-orphan

    local output=$($valg_phobos extent list -f csv -o oid,state --orphan |
                   tail -n +2 | wc -l)
    if [[ $output -ne 0 ]]; then
        error "There should be no orphan extent, got $output"
    fi

    local extent_uuid=$($phobos extent list -o ext_uuid oid1-orphan)
    extent_uuid=${extent_uuid#\[\'}
    extent_uuid=${extent_uuid%\'\]}

    $PSQL << EOF
UPDATE extent SET state = 'orphan' WHERE extent_uuid='$extent_uuid';
EOF

    output=$($valg_phobos extent list --orphan)
    local count=$(echo "$output" | wc -l)
    if [[ $count -ne 1 ]]; then
        error "There should be one extent, got $count"
    fi

    if [[ "$output" != "oid1-orphan" ]]; then
        error "It should be oid1-orphan, got $oid"
    fi
}

function test_extent_list_ctime()
{
    # new object
    $phobos put -f dir ${FILES[0]} obj_ctime

    # list extent ctime of one object with only one extent
    extent_ctime=$($phobos extent list -o creation_time obj_ctime |
                   cut -f2 -d\')
    extent_ctime_seconde=$(date +"%s" --date="${extent_ctime}")
    extent_media_name=$($phobos extent list -o media_name obj_ctime |
                        cut -f 2 -d \')
    extent_path="${extent_media_name}"\
"/$($phobos extent list -o address obj_ctime | cut -f 2 -d \')"
    extent_ctime_on_dir=$(stat ${extent_path} | grep Change | cut -d' ' -f2- |
                          cut -d' ' -f-2)
    extent_ctime_on_dir_seconde=$(date +"%s" --date="${extent_ctime_on_dir}")
    if (( (extent_ctime_on_dir_seconde - 2) > extent_ctime_seconde ||
          (extent_ctime_on_dir_seconde + 2) < extent_ctime_seconde )); then
        error "Listed extent creation_time %{extent_ctime_seconde} differs" \
              "from more than 1 second of the extent file creation time"
    fi

    # new object on two dirs with two extents
    $phobos put -f dir -P repl_count=2 ${FILES[0]} obj_ctime_bis

    # extent ctime grouped listing
    extent_ctime_1=$($phobos extent list -o creation_time obj_ctime_bis |
                     cut -f2 -d\')
    extent_ctime_1_seconde=$(date +"%s" --date="${extent_ctime_1}")
    extent_ctime_2=$($phobos extent list -o creation_time obj_ctime_bis |
                     cut -f4 -d\')
    extent_ctime_2_seconde=$(date +"%s" --date="${extent_ctime_2}")
    extent_media_name_1=$($phobos extent list -o media_name obj_ctime_bis |
                          cut -f 2 -d \')
    extent_path_1="${extent_media_name_1}"\
"/$($phobos extent list -o address obj_ctime_bis | cut -f 2 -d \')"
    extent_ctime_on_dir_1=$(stat ${extent_path_1} | grep Change |
                            cut -d' ' -f2- | cut -d' ' -f-2)
    extent_ctime_on_dir_1_seconde=$(date +"%s" \
                                    --date="${extent_ctime_on_dir_1}")
    if (( (extent_ctime_on_dir_1_seconde - 2) > extent_ctime_1_seconde ||
          (extent_ctime_on_dir_1_seconde + 2) < extent_ctime_1_seconde )); then
        error "Listed extent 1 creation_time %{extent_ctime_seconde} differs" \
              "from more than 1 second of the extent file creation time"
    fi

    extent_media_name_2=$($phobos extent list -o media_name obj_ctime_bis |
                          cut -f 4 -d \')
    extent_path_2="${extent_media_name_2}"\
"/$($phobos extent list -o address obj_ctime_bis | cut -f 4 -d \')"
    extent_ctime_on_dir_2=$(stat ${extent_path_2} | grep Change |
                            cut -d' ' -f2- | cut -d' ' -f-2)
    extent_ctime_on_dir_2_seconde=$(date +"%s" \
                                    --date="${extent_ctime_on_dir_2}")
    if (( (extent_ctime_on_dir_2_seconde - 2) > extent_ctime_2_seconde ||
          (extent_ctime_on_dir_2_seconde + 2) < extent_ctime_2_seconde )); then
        error "Listed extent 2 creation_time %{extent_ctime_seconde} differs" \
              "from more than 2 second of the extent file creation time"
    fi

    # extent ctime degroup listing
    extent_ctime_1=$($phobos extent list --degroup -o creation_time \
                     obj_ctime_bis | head -n 1 | cut -f2 -d\')
    extent_ctime_1_seconde=$(date +"%s" --date="${extent_ctime_1}")
    extent_ctime_2=$($phobos extent list --degroup -o creation_time \
                     obj_ctime_bis | tail -n 1 | cut -f2 -d\')
    extent_ctime_2_seconde=$(date +"%s" --date="${extent_ctime_2}")
    extent_media_name_1=$($phobos extent list --degroup -o media_name \
                          obj_ctime_bis | head -n 1 | cut -f 2 -d \')
    extent_path_1="${extent_media_name_1}"\
"/$($phobos extent list --degroup -o address obj_ctime_bis | head -n 1 |
cut -f 2 -d \')"
    extent_ctime_on_dir_1=$(stat ${extent_path_1} | grep Change |
                            cut -d' ' -f2- | cut -d' ' -f-2)
    extent_ctime_on_dir_1_seconde=$(date +"%s" \
                                    --date="${extent_ctime_on_dir_1}")
    if (( (extent_ctime_on_dir_1_seconde - 2) > extent_ctime_1_seconde ||
          (extent_ctime_on_dir_1_seconde + 2) < extent_ctime_1_seconde )); then
        error "Degroup listed extent 1 creation_time %{extent_ctime_seconde}"
              "differs from more than 1 second of the extent file creation time"
    fi

    extent_media_name_2=$($phobos extent list --degroup -o media_name \
                          obj_ctime_bis | tail -n 1 | cut -f 2 -d \')
    extent_path_2="${extent_media_name_2}"\
"/$($phobos extent list --degroup -o address obj_ctime_bis | tail -n 1 |
cut -f 2 -d \')"
    extent_ctime_on_dir_2=$(stat ${extent_path_2} | grep Change |
                            cut -d' ' -f2- | cut -d' ' -f-2)
    extent_ctime_on_dir_2_seconde=$(date +"%s" \
                                    --date="${extent_ctime_on_dir_2}")
    if (( (extent_ctime_on_dir_2_seconde - 2) > extent_ctime_2_seconde ||
          (extent_ctime_on_dir_2_seconde + 2) < extent_ctime_2_seconde )); then
        error "Degroup listed extent 2 creation_time %{extent_ctime_seconde}"
              "differs from more than 1 second of the extent file creation time"
    fi
}

TEST_SETUP=setup
TESTS=("test_extent_list_degroup"
       "test_extent_list_pattern"
       "test_extent_list_copy_name"
       "test_extent_list_dirs_lib"
       "test_extent_list_orphan"
       "test_extent_list_ctime")

if [[ -w /dev/changer ]]; then
    TESTS+=("test_extent_list_tapes_lib")
fi
